{
    "name": "malkusch/php-mock",
    "type": "library",
    "description": "Use the new package php-mock/php-mock.",
    "keywords": ["mock", "stub", "test double", "function", "test", "TDD", "BDD"],
    "homepage": "https://github.com/php-mock/php-mock",
    "license": "WTFPL",
    "authors": [
        {
            "name": "Markus Malkusch",
            "email": "markus@malkusch.de",
            "homepage": "http://markus.malkusch.de",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {"malkusch\\phpmock\\": "classes/"}
    },
    "require": {
        "php": ">=5.4",
        "phpunit/php-text-template": "^1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4",
        "mockery/mockery": "^0.9"
    },
    "suggest": {
	"phpunit/phpunit": "Allows integration into PHPUnit testcase with the trait PHPMock."
    },
    "archive": {
        "exclude": ["/tests"]
    }
}
